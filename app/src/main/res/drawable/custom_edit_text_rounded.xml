<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The outline when the EditText is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_grey_1" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/light_grey_2" />
        </shape>
    </item>

    <!--The outline when the EditText is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_grey_1" />
            <corners android:radius="4dp" />
            <stroke android:width="0dp" android:color="@color/light_grey_2" />
        </shape>
    </item>

</selector>